<UserControl x:Class="KEPAVerwaltungWPF.UserControls.AnimatedContentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:KEPAVerwaltungWPF.UserControls"
             xmlns:mw="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="{DynamicResource BackgroundBrush}">
        <mw:MetroAnimatedTabControl>
            <mw:MetroTabItem Name="MetroTabItem"  Background="{DynamicResource BackgroundBrush}">
                <mw:ContentControlEx x:Name="PagePlace" Background="{DynamicResource BackgroundBrush}"/>
            </mw:MetroTabItem>
        </mw:MetroAnimatedTabControl>
    </Grid>
</UserControl>
